@import "/templates/showcase/index.wxss";

page {
  padding-bottom: 115rpx;
}

.ui-book-card__img {
  flex: 0 0 40%;
}

.menubar {
  position: fixed;
  bottom: 0;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  align-items: stretch;
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #e5e5e5;
  background-color: #f8f8f8;
}

.menubar__add,
.menubar__review {
  flex: 1;
  border-right: 1px solid #ddd;
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 10rpx;
}

.menubar__add image,
.menubar__review image {
  height: 50rpx;
  width: 50rpx;
}

.menubar__add span,
.menubar__review span {
  font-size: 20rpx;
  color: #888;
}

.menubar__btn {
  position: relative;
  flex: 2;
  padding-left: 15px;
  padding-right: 15px;
  margin-bottom: 0;
  height: 100rpx;  font-size: 36rpx;
  line-height: 100rpx;
  border: none;
  border-radius: 0;
  box-sizing: border-box;
  text-decoration: none;
  text-align: center;
  vertical-align: middle;
}

.menubar__btn::after {
  display: none;
}