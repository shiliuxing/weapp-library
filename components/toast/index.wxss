.toast {
  z-index: 5000;
  display: inline-block;
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  padding: 6px 10px;
  font-size: 14px;
  border-radius: 4px;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
}

.toast--top {
  top: 20px;
}

.toast--center {
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
}

.toast--bottom {
  bottom: 20px;
}