/**
 * 容器、排版等样式
 */

page {
  background-color: #F0EFF5;
}

/* 内容标题 */
.ui-label {
  font-size: 28rpx;
  margin-top: .77em;
  margin-bottom: .3em;
  padding-left: 15px;
  padding-right: 15px;
  color: #999999;
}

/* 普通卡片：padding，背景色，无边框 */
.ui-card {
  position: relative;
  padding: 10px 15px; 
  background-color: #fff;
}
/* Flex卡片：padding，背景色，顶部对齐，无边框 */
.ui-flex-card {
  position: relative;
  display: flex;
  display: -webkit-flex;
  align-items: flex-start;
  padding: 15px; 
  background-color: #fff;
}
/* Flex卡片主体：自动撑满，离左侧元素(如果有的话)10px */
.ui-flex-card__info {
  flex: 1;
  margin-left: 10px;
}
.ui-flex-card__info:first-child {
  margin-left: 0;
}

/* 面板：上下边框、背景颜色 */
.ui-panel {
  position: relative;
  background-color: #fff;
}
.ui-panel:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #E5E5E5;
  color: #E5E5E5;
}
.ui-panel:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #E5E5E5;
  color: #E5E5E5;
}

/* 图书卡片 ui-book-card */
/* 图书封面：90px宽 */
.ui-book-card__img {
  flex: 0 0 90px;
}
/* 图书的文字信息 */
.ui-book-card__info > view {
  line-height: 1.7em;
}
.ui-book-card__info > .font-black-34 {
  line-height: 1.5em;
}
/* 图书描述 */
.ui-book-card__description {
  margin-top: 10px;
  padding: 10px;
  background-color: #F3F3F3;
  border-radius: 4px;
  white-space:pre-line;
}

/* 书单卡片 ui-booklist-card */
/* 书单封面：50px正方形 */
.ui-booklist-card__img {
  flex: 0 0 50px;
  height: 50px;
  width: 50px;
}
/* 书单标题 */
.ui-booklist-card__info > .font-black-34 {
  margin-bottom: 5px;
}

/* 更多（三个圆点） */
.ui-icon-more-area {
  height: 30px;
  text-align: center;
  width: 30px;
}
.ui-icon-more {
  position: relative;
  top: 5px;
  width: 20px;
}

/* hover类 */
.ui--active {
  background-color: #ECECEC !important; 
}